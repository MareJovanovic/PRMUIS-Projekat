<Window x:Class="Server.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Server"
        mc:Ignorable="d"
        Title="Klijent" Height="450" Width="800">
    <Grid Background="Wheat">
        <Grid Background="Wheat" Margin="20 20 20 20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="2*"/>
                <ColumnDefinition Width="3*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="10*"/>
                <RowDefinition Height="2*"/>
            </Grid.RowDefinitions>
            <Label Content="Razgovor sa bibliotekom" Margin="0 -6 0 0" FontSize="15" Grid.Column="0" Grid.Row="0"/>
            <Button Name="Send" Content="Pošalji" Margin="180 0 0 10" Background="White"/>
            <Button Name="Host" Content="Poveži se sa serverom" Grid.Column="1" Grid.Row="1" Margin="100 -10 100 10" Background="White"/>
            <TextBox Name="MsgSend" Margin="0 7 0 0" Grid.Column="0" Grid.Row="1" Grid.RowSpan="1" Background="White"/>
            <TextBox Name="ServerMsg" Margin="0 10 0 0" Grid.Column="0" Grid.Row="2" Grid.RowSpan="3" Background="White" IsReadOnly="True"/>
            <TextBox Name="BookLIst" Margin="20 40 0 0" Grid.Column="1" Grid.Row="1" Grid.RowSpan="3" Background="White" IsReadOnly="True" Visibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
